<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/work_center_to_more"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:background="#2493D3"
            android:layout_width="8dp"
            android:layout_height="match_parent"></LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="各模块流程"
            android:textColor="#6C6C6C"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent" />
    </android.support.constraint.ConstraintLayout>
    <RadioGroup
        android:id="@+id/scroll_main_rg"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <RadioButton
            android:textAlignment="center"
            android:id="@+id/scroll_main_release"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:button="@null"
            android:tag="0"
            android:background="@drawable/shape_green_button"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:text="发布"/>

        <RadioButton
            android:textAlignment="center"
            android:id="@+id/scroll_main_design"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:button="@null"
            android:tag="1"
            android:background="@drawable/shape_blue_button"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:text="设计"/>

        <RadioButton
            android:id="@+id/scroll_main_prop"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:button="@null"
            android:tag="2"
            android:background="@drawable/shape_red_button"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:text="宣传"/>
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:background="@color/colorWhite"
        android:id="@+id/scroll_main_vp"
        android:layout_width="match_parent"
        android:layout_height="100dp"></android.support.v4.view.ViewPager>
</LinearLayout>
