<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/image_work_center_part"
        android:layout_width="match_parent"
        android:layout_height="240dp" />
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/smallBlack"
        android:textSize="16dp"
        android:id="@+id/textview_title_work_center_part"/>
    <TextView
        android:layout_marginTop="7dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:id="@+id/textview_type_work_center_part"/>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textview_choujin"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="酬金 |  "/>
        <TextView
            android:layout_toRightOf="@+id/textview_choujin"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/orange"
            android:text="¥80000.00"
            android:id="@+id/textview_salary_work_center_part"/>
        <Button
            android:id="@+id/btn_pepo_num_work_center_part"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:textSize="12dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/shape_blue_button"/>
    </RelativeLayout>
</LinearLayout>
